{
    "rules": {
        "indent": [
            1,
            4,
            {
                "SwitchCase": 1,
                "VariableDeclarator": {"var": 1, "let": 1, "const": 1}
            }
        ],
        "quotes": 0,
        "no-console": 0,
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ]
    },
    "globals": {
        "Axios": false,
        "Hammer": false,
        "epublican": false
    },
    "env": {
        "es6": true,
        "browser": true,
        "commonjs": true,
        "jasmine": true
    },
    "extends": "eslint:recommended",
    "ecmaFeatures": {
        "experimentalObjectRestSpread": true
    },
    "plugins": []
}